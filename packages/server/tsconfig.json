{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true // Enable composite for project references
  },
  "include": ["src/**/*", "functions/**/*"],
  "exclude": ["node_modules"]
}
